{
  "name": "Category Resource",
  "path": "/api/v1/restaurant/category",
  "methods": {
    "post": {
      "name": "Create new Category",
      "http": {
        "endpoint": "http://restaurant:5000/api/v1/restaurant/category/",
        "method": "post"
      }
    }
  },
  "resources": [
    {
      "name": "Category ID Resource",
      "path": "/:id",
      "methods": {
        "get": {
          "name": "get category Id",
          "http": {
            "endpoint": "http://restaurant:5000/api/v1/restaurant/category/:id/",
            "method": "get"
          }
        },
        "delete": {
          "name": "delete menu category",
          "http": {
            "endpoint": "http://restaurant:5000/api/v1/restaurant/category/:id/",
            "method": "delete"
          }
        },
        "patch": {
          "name": "update category",
          "http": {
            "endpoint": "http://restaurant:5000/api/v1/restaurant/category/:id/",
            "method": "patch"
          }
        }
      },
      "resources": [
        {
          "name": "detach item from category",
          "path": "/remove_item",
          "methods": {
            "post": {
              "http": {
                "endpoint": "http://restaurant:5000/api/v1/restaurant/category/:id/remove_items/",
                "method": "post"
              }
            }
          }
        },
        {
          "name": "attach item from menu category",
          "path": "/add_item",
          "methods": {
            "post": {
              "http": {
                "endpoint": "http://restaurant:5000/api/v1/restaurant/category/:id/add_item/",
                "method": "post"
              }
            }
          }
        }
      ]
    },
    {
      "name": "get category menu list",
      "path": "/menu/:hotel_id",
      "methods": {
        "get": {
          "name": "get category menu list",
          "http": {
            "endpoint": "http://restaurant:5000/api/v1/restaurant/category/menu/:hotel_id/",
            "method": "get"
          }
        }
      }
    }
  ]
}

